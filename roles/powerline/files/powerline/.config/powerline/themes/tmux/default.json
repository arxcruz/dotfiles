			    }
		    },
            {
                "function": "powerline.segments.common.wthr.weather",
                "name": "weather",
                "priority": 60,
                "args": {
                    "unit": "C",
                    "location_query": "berlin, germany",
                    "icons": {
                        "day":           "〇",
                        "blustery":      "⚑",
                        "rainy":         "☔",
                        "cloudy":        "☁",
                        "snowy":         "❅",
                        "stormy":        "☈",
                        "foggy":         "≡",
                        "sunny":         "☼",
                        "night":         "☾",
                        "windy":         "☴",
                        "not_available": "�",
                        "unknown":       "⚠"
                    }
                }
            },
			{
				"function": "powerline.segments.common.time.date",
				"name": "time",
				"args": {
					"format": "%H:%M",
					"istime": true
				}
			},
			{
				"function": "powerline.segments.common.bat.battery"
			}
		]
